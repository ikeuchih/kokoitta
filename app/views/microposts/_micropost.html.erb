<li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 40), micropost.user %>
    <span class="user"><%= link_to micropost.user.username, micropost.user %></span>
    
    <span class="picture">
        <%= image_tag micropost.picture.url if micropost.picture? %>
    </span>
    
    
    
    <span class="content">
        <%= micropost.content %>
        <br>
            <span class="tag_name">
                <% micropost.tags.each do |tag| %>
                   country:<%= tag.tag_name %>
                <% end %>
            </span>
        </br>
            <span class="timestamp">
                投稿時刻<%= time_ago_in_words(micropost.created_at) %>前.
                <% if current_user?(micropost.user) %>
                    <%= link_to "delete", micropost, method: :delete,
                                                     data: { confirm: "本当に削除しますか?"} %>
                <% end %>
            </span>
    </span>
    
    
    
</li>